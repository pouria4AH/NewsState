@using NewsState.Application.Extensions
@using NewsState.DataLayer.Dtos
@using NewsState.DataLayer.Entities
@model List<NewsState.DataLayer.Dtos.ShowShortPostDto>
@{
    var tags = ViewBag.ListTag as List<Tag>;
    var shortPost = ViewBag.shortPost as ShowShortPostDto;
    var olderPosts = ViewBag.olderPost as List<ReadPostDto>;
}
<!-- Featured articles -->
 <section class="featured-articles section section-header-offset">

    <div class="featured-articles-container container d-grid">

        <div class="featured-content d-grid">

            <div class="headline-banner">
                <h3 class="headline fancy-border">
                    <span class="place-items-center">Breaking news</span>
                </h3>
                <span class="headline-description">SAMSUNG and XBOX coopration on brand new Smart TV...</span>
            </div>

            @if (Model != null && Model.Any())
            {
                var index = 1;
                @foreach (var post in Model)
                {
                            <a asp-area="" asp-controller="Home" asp-action="Post" asp-route-id="@post.Id" 
                       class="article featured-article featured-article-@index">
                                <img src="@(PathExtension.PostOrigin + post.ImageName)" class="article-image">
                                <span class="article-category">@post.TagName</span>

                                <div class="article-data-container">

                                    <div class="article-data">
                                        <span>@post.Date</span>
                                        <span class="article-data-spacer"></span>
                                        <span>@post.ReadTime Min read</span>
                                    </div>

                                    <h3 class="title article-title">@post.Title</h3>

                                </div>
                            </a>
                    index++;
                }
            }


        </div>

        <div class="sidebar d-grid">

            <h3 class="title featured-content-title">Trending news</h3>

            <a href="#" class="trending-news-box">
                <div class="trending-news-img-box">
                    <span class="trending-number place-items-center">01</span>
                    <img src="pictures/trendings/trending_1.jpg" alt="" class="article-image">
                </div>

                <div class="trending-news-data">

                    <div class="article-data">
                        <span>23 jan 2022</span>
                        <span class="article-data-spacer"></span>
                        <span>3 Min read</span>
                    </div>

                    <h3 class="title article-title">Sample article title</h3>

                </div>
            </a>

            <a href="#" class="trending-news-box">
                <div class="trending-news-img-box">
                    <span class="trending-number place-items-center">02</span>
                    <img src="pictures/trendings/trending_2.jpg" alt="" class="article-image">
                </div>

                <div class="trending-news-data">

                    <div class="article-data">
                        <span>23 jan 2022</span>
                        <span class="article-data-spacer"></span>
                        <span>3 Min read</span>
                    </div>

                    <h3 class="title article-title">Sample article title</h3>

                </div>
            </a>

            <a href="#" class="trending-news-box">
                <div class="trending-news-img-box">
                    <span class="trending-number place-items-center">03</span>
                    <img src="pictures/trendings/trending_3.jpg" alt="" class="article-image">
                </div>

                <div class="trending-news-data">

                    <div class="article-data">
                        <span>23 jan 2022</span>
                        <span class="article-data-spacer"></span>
                        <span>3 Min read</span>
                    </div>

                    <h3 class="title article-title">Sample article title</h3>

                </div>
            </a>

            <a href="#" class="trending-news-box">
                <div class="trending-news-img-box">
                    <span class="trending-number place-items-center">04</span>
                    <img src="pictures/trendings/trending_4.jpg" alt="" class="article-image">
                </div>

                <div class="trending-news-data">

                    <div class="article-data">
                        <span>23 jan 2022</span>
                        <span class="article-data-spacer"></span>
                        <span>3 Min read</span>
                    </div>

                    <h3 class="title article-title">Sample article title</h3>

                </div>
            </a>

            <a href="#" class="trending-news-box">
                <div class="trending-news-img-box">
                    <span class="trending-number place-items-center">05</span>
                    <img src="pictures/trendings/trending_5.jpg" alt="" class="article-image">
                </div>

                <div class="trending-news-data">

                    <div class="article-data">
                        <span>23 jan 2022</span>
                        <span class="article-data-spacer"></span>
                        <span>3 Min read</span>
                    </div>

                    <h3 class="title article-title">Sample article title</h3>

                </div>
            </a>

        </div>

    </div>

</section>

<!-- Quick read -->
<section class="quick-read section">

    <div class="container">

        <h2 class="title section-title" data-name="Quick read">Quick read</h2>
        <!-- Slider main container -->
        <div class="swiper">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper">
                <!-- Slides -->
                <a asp-area="" asp-controller="Home" asp-action="Post" asp-route-id="@shortPost.Id" class="article swiper-slide">
                    <img src="@(PathExtension.PostOrigin + shortPost.ImageName)" class="article-image">

                    <div class="article-data-container">
                        <div class="article-data">
                            <span>@shortPost.Date</span>
                            <span class="article-data-spacer"></span>
                            <span>@shortPost.ReadTime Min read</span>
                        </div>
                        <h3 class="title article-title">@shortPost.Title</h3>
                    </div>
                </a>
                <!-- Navigation buttons -->
            <div class="swiper-button-prev swiper-controls"></div>
            <div class="swiper-button-next swiper-controls"></div>
            <!-- Pagination -->
            <div class="swiper-pagination"></div>
        </div>

    </div></div>

</section>

<!-- Older posts -->
<section class="older-posts section">

    <div class="container">

        <h2 class="title section-title" data-name="Older posts">Older posts</h2>

        <div class="older-posts-grid-wrapper d-grid">

           @if (olderPosts != null && olderPosts.Any())
           {
               @foreach (var post in olderPosts)
               {
                   <a asp-area="" asp-controller="Home" asp-action="Post" asp-route-id="@post.Id" class="article d-grid">
                       <div class="older-posts-article-image-wrapper">
                           <img src="@(PathExtension.PostOrigin + post.ImageName)" class="article-image">
                       </div>

                       <div class="article-data-container">

                           <div class="article-data">
                               <span>@post.Date</span>
                               <span class="article-data-spacer"></span>
                               <span>@post.ReadTime Min read</span>
                           </div>

                           <h3 class="title article-title">@post.Title</h3>
                           <p class="article-description">@Html.Raw(post.PostText.Substring(0, Math.Min(post.PostText.Length, 75))) ...</p>

                       </div>
                   </a>

               }
           }
        </div>

    </div>

        <div class="see-more-container">
            <a href="#" class="btn see-more-btn place-items-center">See more <i class="ri-arrow-right-s-line"></i></a>
        </div>
</section>

<!-- Popular tags -->
<section class="popular-tags section">

    <div class="container">

        <h2 class="title section-title" data-name="Popular tags">Popular tags</h2>

        <div class="popular-tags-container d-grid">

            @if (tags != null && tags.Any())
            {
                @foreach (var tag in tags)
                {
                           <a href="#" class="article">
                               <span class="tag-name">#@tag.TagName</span>
                               <img src="@(PathExtension.TagOrigin + tag.ImageName)" class="article-image">
                           </a>
                }
            }

        </div>

    </div>
</section>

<!-- Newsletter -->
<section class="newsletter section">

    <div class="container">

        <h2 class="title section-title" data-name="Newsletter">Newsletter</h2>

        <div class="form-container-inner">
            <h6 class="title newsletter-title">Subscribe to News State</h6>
            <form action="" class="form">
                <input class="form-input" type="text" placeholder="Enter your email address">
                <button class="btn form-btn" type="submit">
                    <i class="ri-mail-send-line"></i>
                </button>
            </form>

        </div>

    </div>

</section>

<!-- Footer -->